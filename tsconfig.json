{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src",
    "types",
    "test"
, "src/cli/cip67"  ],
  "exclude": [
    "node_modules"
  ]
}
